{
		"name": "SMLM",
		"n_gpu": 0,

		"arch": {
				"type": "LocalizationCNN",
				"args": {"nz": 100, "scaling_factor": 800, "dilation_flag": true}
		},
		"data_loader": {
				"type": "SMLMDataLoader",
				"args":{
						"data_dir": "/home/cwseitz/Desktop/test/Sim_r3e5i7k7-adu.tif",
						"batch_size": 5,
						"shuffle": true,
						"validation_split": 0.2,
						"num_workers": 2
				}
		},
		"optimizer": {
				"type": "Adam",
				"args":{
						"lr": 0.01,
						"weight_decay": 0,
						"amsgrad": true
				}
		},
		"loss": "KDE_loss3D",
		"lr_scheduler": {
				"type": "StepLR",
				"args": {
						"step_size": 1,
						"gamma": 1
				}
		},
		"trainer": {
				"epochs": 50,
				"save_dir": "saved/",
				"save_period": 1,
				"verbosity": 2,
				"monitor": "min val_loss",
				"early_stop": 10,
				"tensorboard": true
		},
		"metrics": {}
}
